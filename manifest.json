// manifest.json
{
    "manifest_version": 3,
    "name": "TestRail Productivity Extension",
    "version": "1.0",
    "description": "Efficiently fetch and update test cases in TestRail",
    "permissions": ["storage", "activeTab"],
    "host_permissions": [
        "*://*.testrail.io/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }